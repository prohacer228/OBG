<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.grazproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GrazProject">
        <activity
            android:name=".ui.CreateMessages.NewMessageDoneActivity"
            android:exported="false"/>
        <activity
            android:name=".ui.CreateMessages.CreateMessage"
            android:exported="false" />
        <!--
             TODO: Before you run your application, you need a Google Maps API key.

             To get one, follow the directions here:

                https://developers.google.com/maps/documentation/android-sdk/get-api-key

             Once you have your API key (it starts with "AIza"), define a new property in your
             project's local.properties file (e.g. MAPS_API_KEY=Aiza...), and replace the
             "YOUR_API_KEY" string in this file with "${MAPS_API_KEY}".
        -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="YOUR_API_KEY" />

        <activity
            android:name=".mapsactivity.MapsActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@android:style/Theme.NoTitleBar" />

        <activity
            android:name=".MenuActivity.SelectionSectionActivity"
            android:exported="false" />
        <activity
            android:name=".MenuActivity.MenuActivity"
            android:exported="false" />
        <activity
            android:name=".UserMainActivity"
            android:exported="false"
            android:label="@string/title_activity_user_main"
            android:theme="@style/Theme.GrazProject.NoActionBar" />
        <activity
            android:name=".register.UserDataRegister"
            android:exported="false" />
        <activity
            android:name=".newPassword.NewPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".register.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".newPassword.ResetPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".about.AboutActivity"
            android:label="@string/about_title" />
    </application>



</manifest>